// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DB_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  password  String
  email     String    @unique()
  role      Role      @default(TEACHER)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  Bookings  Booking[]

  @@map("users")
}

model Classroom {
  id          String  @id @default(uuid())
  name        String  @unique()
  description String?
  Bookings  Booking[]

  @@map("classrooms")
}

model Booking {
  id               String   @id @default(uuid())
  status           STATUS   @default(CONFIRMED)
  description      String?
  BookingDateStart DateTime @default(now())
  BookingDateEnd   DateTime

  teacher      User   @relation(fields: [teacherId], references: [id])
  teacherId    String
  classrooom   Classroom   @relation(fields: [classrooomId], references: [id])
  classrooomId String

  @@map("bookings")
}

enum Role {
  TEACHER
  ADMIN
}

enum STATUS {
  CONFIRMED
  CANCELED
}
